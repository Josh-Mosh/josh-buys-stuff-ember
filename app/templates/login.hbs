<div class="container">
  <div class="row justify-content-center">
    <div class="col col-md-10 col-lg-8">
      <div class="card m-t-15">
        <div class="card-header mb-3">
          <div class="card-title">Login</div>
          <div class="card-title-secondary">If you're not Josh, what are you doing here?</div>
        </div>
        <div class="card-block">

          <div class="form-group">
            <label for="identification">Email</label>
            {{input type="text" class="form-control" id="identification" placeholder="Email Address" value=identification}}
          </div>

          <div class="form-group">
            <label for="password">Password</label>
            {{input id="password" type="password" class="form-control" placeholder="Enter Password" value=password}}
          </div>

        </div>
        <div class="card-footer text-right">
          {{link-to "Cancel" "home" class="btn btn-secondary mr-2"}}
          <button class="btn btn-primary" type="submit" {{action "authenticate"}}>Login</button>
        </div>
      </div>
    </div>
  </div>
</div>

<div>
  {{#if errorMessage}}
    <p>{{errorMessage}}</p>
  {{/if}}
</div>
